{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ESNext",
    "lib": ["es5", "dom"],
    "types": ["node"],
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@helpers/*": ["helpers/*"],
      "@data/*": ["test-data/*"]
    },
    "moduleResolution": "node"
  },
  "include": ["./**/*.ts", "./playwright.config.ts"],
  "exclude": ["node_modules"]
}
